@using Merchello.FastTrack.Ui
@using Merchello.Web
@inherits Merchello.Web.Mvc.MerchelloTemplatePage
@{
    Layout = "Master.cshtml";
    if (CurrentCustomer.Basket().IsEmpty)
    {
        Response.Redirect(StoreUiHelper.Content.GetStoreRoot().Url);
    }
}

@Html.Partial("_Headline")

<div class="row">

    <div class="col-md-6" data-muitarget="checkoutaddresses">
       @Html.Action("BillingAddressForm", "CheckoutAddress", new { area = "FastTrack" });
    </div>

    <div class="col-md-6">
        <h3>Order Summary</h3>
        @Html.Action("BasketSummary", "CheckoutSummary", new { area = "FastTrack"})
    </div>

</div>