@inherits Merchello.Web.Mvc.MerchelloTemplatePage
@using Merchello.FastTrack.Ui
@using Merchello.Web
@{
    var storeRoot = StoreUiHelper.Content.GetStoreRoot();
    var basketPage = StoreUiHelper.Content.GetBasket();
}
<div class="navbar navbar-inverse">
    <div class="container">
        <a class="navbar-brand navbar-right" href="@storeRoot.Url">@Umbraco.Field("storeName", recursive: true)</a>

        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li@(IsActive(storeRoot.Id))><a href="@Url.Content("~/")">Home</a></li>

                @foreach (var page in storeRoot.Children.Where(x => x.DocumentTypeAlias != "basket" && x.IsVisible()))
                {
                    <li@(IsActive(page.Id))><a href="@page.Url">@page.Name</a></li>
                }

                <li@(IsActive(basketPage.Id))><a href="@basketPage.Url">@basketPage.Name (<span data-muilabel="basketcount">@CurrentCustomer.Basket().TotalQuantityCount</span>)</a></li>
            </ul>
        </div>
    </div>
</div>

@functions
{
    private IHtmlString IsActive(int contentId)
    {
        return Model.Content.Id == contentId ? MvcHtmlString.Create(" class=\"active\"") : MvcHtmlString.Empty;
    }
}