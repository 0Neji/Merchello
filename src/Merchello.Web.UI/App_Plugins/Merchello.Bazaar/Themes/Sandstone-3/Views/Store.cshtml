@inherits Umbraco.Web.Mvc.UmbracoViewPage<StoreModel>
@using Merchello.Bazaar
@using Merchello.Bazaar.Models.ViewModels
@using Merchello.Web.Models.VirtualContent
@using Umbraco.Web
@{
    Layout = "Master.cshtml";
    var featuredProducts = Model.GetPropertyValue<IEnumerable<IProductContent>>("featuredProducts").ToList();
    
}

<div class="jumbotron">
    <h1>@Model.StoreTitle</h1>
    @Html.Raw(Model.Overview)
</div>

<section id="categories">
    <div class="page-header">
        <h1>Featured Products</h1>
    </div>
    @if (featuredProducts.Any())
    {
        <div class="row">
            @foreach (var product in featuredProducts)
            {
                // if you want to specify the culture you can do it like
                product.SpecifyCulture(UmbracoContext.PublishedContentRequest.Culture);

                <div class="col-md-4">
                    <a href="@product.Url" class="thumbnail">
                        @if (product.HasValue("image"))
                        {
                            <img src="@product.GetCropUrl(propertyAlias: "image", height: 350, cacheBuster: false)&rnd=@DateTime.Now.Ticks" alt="@product.Name"/>
                        }
                        <div class="caption">
                            <h3>@product.Name</h3>
                            <p class="price">
                                @if (product.SalePrice > 0)
                                {
                                    <span class="price-sale">
                                        @product.SalePrice.FormattedPrice(Model.Currency) <span class="glyphicon glyphicon glyphicon-fire" aria-hidden="true"></span>
                                    </span>
                                }
                                else
                                {
                                    @product.Price.FormattedPrice(Model.Currency)
                                }
                            </p>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No featured products selected
        </div>
    }

</section>

@Html.Action("RecentlyViewed", "BazaarStore", new { area = "Bazaar" })