@inherits Umbraco.Web.Mvc.UmbracoViewPage<CheckoutAddressForm>
@using System.Web.Mvc.Html
@using Merchello.Bazaar.Controllers
@using Merchello.Bazaar.Models
@using Merchello.Bazaar
@using Umbraco.Web

<div class="row-fluid">
    <div class="span8">
        <div class="span6 text-center">
            <h2>Billing Address</h2>
        </div>
        <div class="span6 text-center">
            <h2>Shipping Address</h2>
        </div>
    </div>
</div>

<div class="row-fluid">



    @using (Html.BeginUmbracoForm<SalePreparationOperationsController>("SaveAddresses", null, new { @id="addresses-form"}))
    {
        <div class="span8">

            <div class="row-fluid">
                <div class="span6">
                    <fieldset id="billing-address">

                        <div class="control-group">
                            @Html.LabelFor(x => x.BillingName, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.BillingName)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.BillingName, new { @id="billing-name", @placeholder = "Your full name", @class="span10" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.BillingEmail, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.BillingEmail)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.BillingEmail, new { @id="billing-email", @placeholder = "Your email address", @class = "span10" })
                            </div>
                        </div>


                        <div class="control-group">
                            @Html.LabelFor(x => x.BillingAddress1, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.BillingAddress1)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.BillingAddress1, new { @id="billing-address1", @placeholder = "Address line 1", @class = "span10" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.BillingAddress2, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(x => x.BillingAddress2, new { @id = "billing-address2", @placeholder = "Address line 2", @class = "span10" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.BillingLocality, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.BillingLocality)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.BillingLocality, new { @id = "billing-locality", @placeholder = "Your locality or city" })
                            </div>
                        </div>

                        <div class="control-group">

                            @Html.LabelFor(x => x.BillingRegion, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(x => x.BillingRegion, new { @placeholder = "Your region or province", @id="billing-province-entry", @data_addresstype="billing" })
                                <select id="billing-province-select" class="span8" data-addresstype="billing"></select>
                            </div>

                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.BillingCountries, new { @class = "control-label" })
                            <div class="controls">
                                @Html.DropDownListFor(x => x.BillingCountryCode, Model.BillingCountries, new { @id="billing-country-select", @class = "country-selection span10",  @data_addresstype="billing" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.BillingPostalCode, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.BillingPostalCode)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.BillingPostalCode, new { @id = "billing-postalcode", @placeholder = "Your postal code" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.BillingPhone, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(x => x.BillingPhone, new { @id="billing-phone", @placeholder = "Your telephone number", @class = "span10" })
                            </div>
                        </div>

                    </fieldset>

                </div>
                <div class="span6">
                    <div class="control-group">
                            <label class="checkbox pull-right">
                                @Html.CheckBoxFor(x => x.BillingIsShipping, new { @id = "billing-is-shipping" }) Use billing address
                            </label>
                       </div>

                    <fieldset id="shipping-address">


                        <div class="control-group">
                            @Html.LabelFor(x => x.ShippingName, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.ShippingName)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ShippingName, new { @id="shipping-name", @placeholder = "Your full name", @class = "span10" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.ShippingEmail, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.ShippingEmail)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ShippingEmail, new { @id = "shipping-email", @placeholder = "Your email address", @class = "span10" })
                            </div>
                        </div>


                        <div class="control-group">
                            @Html.LabelFor(x => x.ShippingAddress1, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.ShippingAddress1)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ShippingAddress1, new { @id = "shipping-address1", @placeholder = "Address line 1", @class = "span10" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.ShippingAddress2, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ShippingAddress2, new { @id = "shipping-address2", @placeholder = "Address line 2", @class = "span10" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.ShippingLocality, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.ShippingLocality)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ShippingLocality, new { @id = "shipping-locality", @placeholder = "Your locality or city", @class = "span10" })
                            </div>
                        </div>

                        <div class="control-group">

                            @Html.LabelFor(x => x.ShippingRegion, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ShippingRegion, new { @placeholder = "Your region or province", @id = "shipping-province-entry",  @data_addresstype="shipping" })
                                <select name="shippingRegionSelect" id="shipping-province-select" class="span8" data-addresstype="shipping"></select>
                            </div>

                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.ShippingCountries, new { @class = "control-label" })
                            <div class="controls">
                                @Html.DropDownListFor(x => x.ShippingCountryCode, Model.ShippingCountries, new { @id="shipping-country-select", @class = "country-selection span10",  @data_addresstype="shipping" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.ShippingPostalCode, new { @class = "control-label" })
                            @Html.ValidationMessageFor(x => x.ShippingPostalCode)
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ShippingPostalCode, new { @id = "shipping-postalcode", @placeholder = "Your postal code" })
                            </div>
                        </div>

                        <div class="control-group">
                            @Html.LabelFor(x => x.ShippingPhone, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(x => x.ShippingPhone, new { @id = "shipping-phone", @placeholder = "Your telephone number", @class = "span10" })
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>

        </div>
        <div class="span3 offset1">
            @Html.ThemedPartial(Model.ThemeName, "SaleSummary", Model.SaleSummary)
            @Html.HiddenFor(x => x.ConfirmSalePageId)
            <div class="control-group">
                <button type="submit" class="btn btn-primary">Continue Checkout</button>
            </div>
        </div>
    }

</div>