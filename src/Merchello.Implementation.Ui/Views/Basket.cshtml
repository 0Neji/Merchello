@inherits Merchello.Web.Mvc.MerchelloViewPage<Basket>
@using Merchello.Implementation
@using Merchello.Implementation.Ui
@using Merchello.Web
@{
	Layout = "Master.cshtml";
}

@Html.Partial("_Headline")

@if (CurrentCustomer.Basket().Items.Any())
{
    @Html.Action("BasketForm", "DefaultBasket", new { area = "Merchello" })
}
else
{
    <p><a href="@StoreUiHelper.Content.GetStoreRoot().Url">There's nothing in your shopping cart, start shopping!</a></p>
}

